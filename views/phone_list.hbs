<div class="category-header">
    <h2>Phones Available</h2>
    <a href="/catalog/phone/create" class="btn btn-primary">Add item</a>
</div>
<div class="container">
    <div class="row">
        {{#each phone_list}}
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100" style="width: 18rem;">
                <img class="card-img-top h-100"
                    src="https://cdn.pocket-lint.com/r/s/1200x630/assets/images/120309-phones-buyer-s-guide-best-smartphones-2020-the-top-mobile-phones-available-to-buy-today-image1-eagx1ykift.jpg"
                    alt="Phone image">
                <div class="card-body h-100">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/catalog/phone/{{this.id}}" class="btn btn-primary">View this phone.</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>